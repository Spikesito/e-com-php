{% extends "layout.twig" %}
{% block head %}
	<title>
		Catalog
	</title>
{% endblock %}


{# {% block connected %}
<p>Ici ya du contenu qui peut bouger</p>
{% endblock %} #}
{% block content %}
	<h1>
		Catalog section !
	</h1>
	<br>{{test}}
	<br>
	<div id="product-container">
		{% for p in products %}
			<div class="product-card" onclick="document.location.href='/detail/{{p.ProductId}}'">
				<img src="https://picsum.photos/200/200"></img>
			<p>{{ p.ProductName }}</p>
		</div>
	{% endfor %}
</div>
<style>
	#product-container {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		column-gap: 50px;
		row-gap: 20px;
		grid-auto-rows: minmax(100px, auto);
		margin: 50px
	}
	.product-card {
		background-color: white;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.product-card:hover {
		background-color: #e3e3e3
	}
</style>{% endblock %}
